<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Input_Activity">

    <ImageView
        android:id="@+id/logo11"
        android:layout_width="187dp"
        android:layout_height="104dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/nameinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/nameinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/firstedittext"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:gravity="center"
        android:hint="@string/name"
        android:maxLength="5"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ageinput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo11"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/ageinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/firstedittext"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:gravity="center"
        android:hint="@string/age"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/heightinput"
        app:layout_constraintTop_toBottomOf="@+id/nameinput"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/heightinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/firstedittext"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:gravity="center"
        android:hint="@string/high"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/kginput"
        app:layout_constraintTop_toBottomOf="@+id/ageinput"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/kginput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/firstedittext"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:gravity="center"
        android:hint="@string/kg"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/complete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightinput"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/chosebtn"
        android:elevation="0dp"
        android:fontFamily="@font/apple_sd_gothic_neo_r"
        android:text="@string/com"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kginput" />

</androidx.constraintlayout.widget.ConstraintLayout>