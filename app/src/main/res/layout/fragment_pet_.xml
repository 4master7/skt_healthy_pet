<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pet_Fragment"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/petname"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="210dp"
            android:background="@drawable/dogname"
            android:gravity="center"
            android:text="대충 이름"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="11 1000/10000"
            android:gravity="center"
            android:background="@drawable/xpbar"
            android:textColor="@android:color/black"
            android:layout_marginLeft="220dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/petname"
            app:layout_constraintTop_toTopOf="parent"

            >

        </TextView>
        <ImageView
            android:id="@+id/coin"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/coin"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petname">

        </ImageView>

        <TextView
            android:id="@+id/cointext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:text="현재 소지금액"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/coins"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/coin"
            app:layout_constraintTop_toBottomOf="@+id/petname">

        </TextView>
        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/petroom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

               <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/clock"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/closet"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bed1"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dog2"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>